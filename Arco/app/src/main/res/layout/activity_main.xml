<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="107dp" app:srcCompat="@drawable/arcodesonado"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:scaleType="center" android:contentDescription="arcodesonado"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="371dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <Button
                    android:text="LAB -1- OFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btLab1"/>
            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <Button
                    android:text="LAB -2- OFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btLab2"/>
            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <Button
                    android:text="LAB -3- OFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btLab3"/>
            <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <Button
                    android:text="LAB -4- OFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btLab4"/>
            <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <Button
                    android:text="LAB -5- OFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btLab5"/>
            <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="111dp" android:id="@+id/tvConteudo"
            />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>