                          android:layout_height="130dp"
                          android:id="@+id/tvDesc" android:layout_marginTop="64dp"
                          app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/ivPerfil"
                          android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
                  <TextView
                          android:text="Ragnar Lothbrok"
                          android:layout_width="314dp"
