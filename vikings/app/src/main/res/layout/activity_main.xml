<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

      <ImageView
              android:layout_width="450dp"
              android:layout_height="225dp" app:srcCompat="@drawable/vikingslogo"
              android:id="@+id/ivLogoVikings" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              app:layout_constraintVertical_bias="0.085"
              android:contentDescription="@logo da sÃ©rie vikings com formato de V"
              tools:srcCompat="@drawable/vikingslogo"/>
      <ImageView
              android:layout_width="111dp"
              android:layout_height="111dp" app:srcCompat="@drawable/ragnar"
              android:id="@+id/ivRagnar" android:layout_marginTop="280dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
      <ImageView
              android:layout_width="111dp"
              android:layout_height="111dp" app:srcCompat="@drawable/lagertha" android:id="@+id/ivLagertha"
              android:layout_marginTop="280dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/ivRagnar"
              android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
      <ImageView
              android:layout_width="111dp"
              android:layout_height="111dp" app:srcCompat="@drawable/bjorn"
              android:id="@+id/ivBjorn" android:layout_marginTop="280dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/ivLagertha"
              android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
      <ImageView
              android:layout_width="111dp"
              android:layout_height="111dp" app:srcCompat="@drawable/rollo"
              android:id="@+id/ivRollo"
              app:layout_constraintTop_toBottomOf="@+id/ivRagnar" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="4dp"/>
      <ImageView
              android:layout_width="111dp"
              android:layout_height="111dp" app:srcCompat="@drawable/athelstan"
              android:id="@+id/ivAthelstan"
              app:layout_constraintTop_toBottomOf="@+id/ivLagertha" app:layout_constraintStart_toEndOf="@+id/ivRollo"
              android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginTop="4dp"/>
      <ImageView
              android:layout_width="111dp"
              android:layout_height="111dp" app:srcCompat="@drawable/floki"
              android:id="@+id/ivFloki"
              app:layout_constraintTop_toBottomOf="@+id/ivBjorn" app:layout_constraintStart_toEndOf="@+id/ivAthelstan"
              android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>